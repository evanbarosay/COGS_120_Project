<html>
<head>
  <title>Homepage</title>
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Roboto+Slab" rel="stylesheet">
</head>

<center>
<body>
<div class="header">
<h1>Homepage</h1>
</div>
  <div class="container">

<!-- Version B is alternative: show all tasks, no "task list" icon -->
    {{#if viewAlt}}
    Welcome back! Here are your tasks for today.
    {{#each tasks}}
    <div class="row" id="task">
      <img src="{{image}}" id="taskimage">
      <div id="taskinfo">
  <a href="task/{{name}}/{{description}}/{{time}}/{{index}}">{{name}}</a><br>
      <br>

    </div>
    <div id="tasktime">{{time}}</div>
      <!-- end ROW -->
  </div>
      {{/each}}


<!-- Version A is original: show one task at a time, with "task list" icon -->
    {{else}}
    Welcome back! Your upcoming task is below: <br><br>
{{#with taskrh}}
    <div class="row"><center>
      <div id="task-homepage">
      <img src="{{image}}" id="homepage_image">
    </center>

    <div class="row">
      <div id="task">
<a href="task/{{name}}/{{description}}/{{time}}/{{index}}">{{name}}</a><br>
      {{description}}<br>
<b>{{time}}</b>
    </div>
      <!-- end ROW -->
  </div>
  <br>
</div>
      {{/with}}
      {{/if}}
</div>

<!--Navigation Starts Here-->
<div id="navigation">
  <div class="row">
    <div class="column"><a href="homepage"><img src="/images/general/home_ACTIVE.png"></a></div>
    {{#if viewAlt}}
    <div class="column"><a href="create_task"><img src="/images/general/nav-add.png"></a></div>

    {{else}}
    <div class="column"><a href="task_list"><img src="/images/general/list-512.png"></a></div>
    {{/if}}
    <div class="column"><a href="profile"><img src="/images/general/view_profile.png"></a></div>
  </div>
</div>

</body></center>
</html>
